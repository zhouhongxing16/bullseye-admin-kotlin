<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chris.bullseye.mapper.OrderMapper">
    <resultMap id="BaseResultMap" type="com.chris.bullseye.pojo.Order">
        <id column="id" jdbcType="VARCHAR" property="id" />
        <result column="order_no" jdbcType="VARCHAR" property="orderNo" />
        <result column="total" jdbcType="INTEGER" property="total" />
        <result column="type_id" jdbcType="VARCHAR" property="typeId" />
        <result column="pay_type_id" jdbcType="VARCHAR" property="payTypeId" />
        <result column="pay_date" jdbcType="TIMESTAMP" property="payDate" />
        <result column="trade_no" jdbcType="VARCHAR" property="tradeNo" />
        <result column="trade_amount" jdbcType="INTEGER" property="tradeAmount" />
        <result column="trade_num" jdbcType="INTEGER" property="tradeNum" />
        <result column="user_id" jdbcType="VARCHAR" property="userId" />
        <result column="remark" jdbcType="VARCHAR" property="remark" />
        <result column="status" jdbcType="INTEGER" property="status" />
        <result column="created" jdbcType="TIMESTAMP" property="created" />
        
    </resultMap>

    <resultMap id="BaseResultMapDto" type="com.chris.bullseye.dto.OrderDto" extends="BaseResultMap">
       <result column="userName" jdbcType="VARCHAR" property="userName"/>
    </resultMap>
    
    <sql id="basic_list">
		a.id, a.order_no, a.total, a.type_id, a.pay_type_id, a.pay_date, a.trade_no, a.trade_amount, a.trade_num, a.user_id, a.remark, a.status, a.created
	</sql>

    <select id="getListByParams" resultMap="BaseResultMapDto" parameterType="map">
        SELECT
        <include refid="basic_list"/>,staff.name as userName
        FROM kb_orders a
        left join kb_accounts act on act.id = a.user_id
        left join kb_staffs staff on staff.id = act.staff_id
        <where>
            <if test="id!=null and id!='' ">
                and a.id = #{ id }
            </if>
            <if test="orderNo!=null and orderNo!='' ">
                and a.order_no LIKE CONCAT('%', #{ orderNo }, '%')
            </if>
            <if test="total!=null and total!='' ">
                and a.total LIKE CONCAT('%', #{ total }, '%')
            </if>
            <if test="typeId!=null and typeId!='' ">
                and a.type_id = #{ typeId }
            </if>
            <if test="payTypeId!=null and payTypeId!='' ">
                and a.pay_type_id = #{ payTypeId }
            </if>
            <if test="payDate!=null and payDate!='' ">
                and a.pay_date LIKE CONCAT('%', #{ payDate }, '%')
            </if>
            <if test="tradeNo!=null and tradeNo!='' ">
                and a.trade_no LIKE CONCAT('%', #{ tradeNo }, '%')
            </if>
            <if test="tradeAmount!=null and tradeAmount!='' ">
                and a.trade_amount LIKE CONCAT('%', #{ tradeAmount }, '%')
            </if>
            <if test="tradeNum!=null and tradeNum!='' ">
                and a.trade_num LIKE CONCAT('%', #{ tradeNum }, '%')
            </if>
            <if test="userId!=null and userId!='' ">
                and a.user_id = #{ userId }
            </if>
            <if test="remark!=null and remark!='' ">
                and a.remark LIKE CONCAT('%', #{ remark }, '%')
            </if>
            <if test="status!=null and status!='' ">
                and a.status = #{ status }
            </if>
            <if test="created!=null and created!='' ">
                and a.created LIKE CONCAT('%', #{ created }, '%')
            </if>
        </where>
        order by a.created desc
    </select>

